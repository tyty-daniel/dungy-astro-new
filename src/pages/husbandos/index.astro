---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import UpcomingBirthdays from '../../components/UpcomingBirthdays.astro';
import SeriesFilter from '../../components/SeriesFilter.jsx';

const posts = (await getCollection('husbandos')).sort(
  (a, b) => a.data.name.toLowerCase().localeCompare(b.data.name.toLowerCase())
);

// Split husbandos by category
const realHusbandos = posts.filter(h => (h.data.category || 'husbando') === 'husbando');
const honourableMentions = posts.filter(h => h.data.category === 'honourable-mention');
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title="dungy's husbandos" description={SITE_DESCRIPTION} />
        <style>
            main {
                width: 960px;
                max-width: 100vw;
                margin: 0 auto;
            }
            .flex-main {
                display: flex;
                flex-direction: column;
                gap: 2rem;
            }
            @media (min-width: 900px) {
                .flex-main {
                    flex-direction: row;
                    align-items: flex-start;
                    justify-content: space-between;
                }
                .left-col {
                    width: 55%;
                    min-width: 300px;
                }
                .right-col {
                    width: 45%;
                    min-width: 260px;
                }
            }
            @media (max-width: 900px) {
                .flex-main {
                    flex-direction: column;
                }
                .left-col, .right-col {
                    width: 100%;
                }
            }
        </style>
    </head>
    <body>
        <Header />
        <main>
            <div class="flex-main">
                <div class="left-col">
                    <h1 class="font-sans text-blue-900 text-4xl m-0">husbandos</h1>
                    <p>my favourite fictional anime men accured throughout the years</p>
                    <p>see <a href="/blog/what-is-a-husbando/">what a husbando is here</a></p>
                    <p><a href="/husbandos/calendar/">view birthday calendar ðŸ“…</a></p>
                    <div class="border-dashed border-2 border-blue-900 text-center font-sans p-1 m-4">
                        <h2 class="text-base">dungy's top husbandos</h2>
                        <ol class="text-sm">
                            <a href="/husbandos/thoma/"><li>1. thoma</li></a>
                            <a href="/husbandos/kisumi/"><li>2. kisumi shigino</li></a>
                            <a href="/husbandos/loid/"><li>3. loid forger</li></a>
                            <a href="/husbandos/himmel/"><li>4. himmel</li></a>
                            <a href="/husbandos/von-lycaon/"><li>5. von lycaon</li></a>
                        </ol>
                    </div>
                </div>
                <div class="right-col">
                    <UpcomingBirthdays />
                </div>
            </div>
            <section>
                <h2 class="text-2xl font-sans text-blue-900 mb-4">real husbandos</h2>
                <SeriesFilter husbandos={realHusbandos} category="husbando" client:load />
            </section>
            
            {honourableMentions.length > 0 && (
                <section class="mt-8">
                    <h2 class="text-2xl font-sans text-blue-900 mb-4">honourable mentions</h2>
                    <SeriesFilter husbandos={honourableMentions} category="honourable-mention" client:load />
                </section>
            )}
        </main>
        <Footer />
    </body>
</html>