---
// src/components/ImageGrid.astro
import LightboxWrapper from './LightboxWrapper.jsx';
const { images } = Astro.props;
---
<style>
    .image-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1rem;
    }
</style>
<LightboxWrapper images={images} client:load />
